{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"lib": [
			"es2017",
			"es2017.object",
			"dom"
		],
		"declaration": false,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"sourceMap": false,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"build"
	]
}